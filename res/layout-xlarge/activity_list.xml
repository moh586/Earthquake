<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context=".List" >

    <TextView
        android:id="@+id/listtitlelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textColor="#33b5e5"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/listtitleimg"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/listtitlelbl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:src="#33b5e5" />

    <RelativeLayout
        android:id="@+id/backrl"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#808080" >

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/backselector" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listitems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/backrl"
        android:layout_below="@id/listtitleimg" >

    </ListView>

</RelativeLayout>
